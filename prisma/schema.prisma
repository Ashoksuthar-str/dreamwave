generator client {
provider = "prisma-client-js"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------
//  USER (Login, Roles)
// ---------------------
model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String @default("staff") // manager / staff
}

// ---------------------
//  PRODUCT CATEGORY
// ---------------------
model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

// ---------------------
//  WAREHOUSE / LOCATION
// ---------------------
model Warehouse {
  id             Int          @id @default(autoincrement())
  name           String
  stocks         Stock[]
  receipts       Receipt[]
  transfersFrom  Transfer[]   @relation("TransferFrom")
  transfersTo    Transfer[]   @relation("TransferTo")
}

// ---------------------
//  PRODUCT
// ---------------------
model Product {
  id            Int             @id @default(autoincrement())
  name          String
  sku           String          @unique
  uom           String
  categoryId    Int
  category      Category        @relation(fields: [categoryId], references: [id])

  stocks        Stock[]
  receiptItems  ReceiptItem[]
  deliveryItems DeliveryItem[]
  transferItems TransferItem[]
}

// ---------------------
//  STOCK PER LOCATION
// ---------------------
model Stock {
  id          Int       @id @default(autoincrement())
  productId   Int
  warehouseId Int
  quantity    Int       @default(0)

  product     Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id], onDelete: Cascade)

  @@unique([productId, warehouseId])
}

// ---------------------
//  RECEIPTS (Incoming)
// ---------------------
model Receipt {
  id           Int             @id @default(autoincrement())
  supplier     String
  warehouseId  Int
  receiptDate  DateTime        @default(now())
  status       String          @default("draft") // draft, validated
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  items        ReceiptItem[]

  warehouse    Warehouse       @relation(fields: [warehouseId], references: [id])
}

model ReceiptItem {
  id          Int     @id @default(autoincrement())
  receiptId   Int
  productId   Int
  quantity    Int
  receivedQty Int     @default(0)

  receipt     Receipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  product     Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// ---------------------
//  DELIVERY (Outgoing)
// ---------------------
model Delivery {
  id        Int            @id @default(autoincrement())
  customer  String?
  status    String         @default("draft") // draft, validated
  createdAt DateTime       @default(now())
  items     DeliveryItem[]
}

model DeliveryItem {
  id          Int     @id @default(autoincrement())
  deliveryId  Int
  productId   Int
  quantity    Int
  warehouseId Int

  delivery    Delivery @relation(fields: [deliveryId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// ---------------------
//  INTERNAL TRANSFERS
// ---------------------
model Transfer {
  id                Int             @id @default(autoincrement())
  fromWarehouseId   Int
  toWarehouseId     Int
  status            String          @default("draft") // draft, completed
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  items             TransferItem[]

  fromWarehouse     Warehouse       @relation("TransferFrom", fields: [fromWarehouseId], references: [id])
  toWarehouse       Warehouse       @relation("TransferTo", fields: [toWarehouseId], references: [id])
}

model TransferItem {
  id             Int      @id @default(autoincrement())
  transferId     Int
  productId      Int
  quantity       Int
  transferredQty Int      @default(0)

  transfer       Transfer @relation(fields: [transferId], references: [id], onDelete: Cascade)
  product        Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}
